<div class="list-group">
  <%
     clients = Client.online
     # clients.unshift(clients.delete(client))
  %>
  <% clients.map(&:user).compact.each do |user| %>
  <div class="list-group-item <%= (user == client.user) ? 'me' : '' %>">
    <h4 class="list-group-item-heading"><%= user.name %></h4>
    <p class="list-group-item-text">
      <%= autosave_fld user, :status, :default => "<statusless>" %>
    </p>
  </div>
  <% end %>
</div>
